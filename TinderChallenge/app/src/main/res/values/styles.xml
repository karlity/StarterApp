<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="ChallengeEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="boxCornerRadiusBottomEnd">10dp</item>
    <item name="boxCornerRadiusTopEnd">10dp</item>
    <item name="boxCornerRadiusBottomStart">10dp</item>
    <item name="boxCornerRadiusTopStart">10dp</item>
    <item name="boxStrokeColor">@color/box_color</item>
    <item name="android:lines">1</item>
    <item name="android:singleLine">true</item>
    <item name="hintTextColor">@color/box_color</item>
    <item name="android:textCursorDrawable">@color/box_color</item>
  </style>

  <style name="ChallengeButton" parent="Widget.MaterialComponents.Button">
    <item name="textAllCaps">false</item>
    <item name="android:backgroundTint">@color/red_primary</item>
    <item name="android:textColor">@color/white</item>
    <item name="cornerRadius">10dp</item>

  </style>

</resources>